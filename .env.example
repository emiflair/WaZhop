# Environment variables template
# Copy this to .env and fill in your actual values

# App
APP_BASE_URL=http://localhost:3000

# MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# Auth
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=30d

# Admin (for initial seeding/testing)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=SecurePassword123!

# Email/SMS provider (Brevo)
EMAIL_PROVIDER=brevo
BREVO_API_KEY=your-brevo-api-key
BREVO_SENDER_EMAIL=hello@yourdomain.com
BREVO_SENDER_NAME=YourAppName

# SMS provider (Africa's Talking)
SMS_PROVIDER=africastalking
AFRICASTALKING_API_KEY=your-africastalking-key
AFRICASTALKING_USERNAME=sandbox
AFRICASTALKING_SENDER_ID=YourApp

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
