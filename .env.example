# ============================================
# WaZhop Environment Variables - Example
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=development

# ============================================
# SERVER
# ============================================
PORT=5000

# ============================================
# DATABASE
# ============================================
MONGODB_URI=mongodb://localhost:27017/wazhop-dev
# Production: mongodb+srv://username:password@cluster.mongodb.net/wazhop

# ============================================
# JWT CONFIGURATION
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRE=30d

# ============================================
# ENCRYPTION
# ============================================
# For encrypting sensitive data (payment keys, 2FA secrets, etc.)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-encryption-key-at-least-32-characters-long

# ============================================
# SECURITY
# ============================================
# Rate limiting (requests per 15 minutes)
RATE_LIMIT_MAX=100

# Session secret
SESSION_SECRET=your-session-secret-key

# CSRF Protection
CSRF_SECRET=your-csrf-secret-key

# ============================================
# FRONTEND URL (for CORS)
# ============================================
APP_BASE_URL=http://localhost:5173
# Production: https://wazhop.ng

# ============================================
# EMAIL CONFIGURATION (Brevo/SendInBlue)
# ============================================
EMAIL_PROVIDER=brevo
BREVO_API_KEY=your-brevo-api-key
BREVO_SENDER_EMAIL=noreply@wazhop.ng
BREVO_SENDER_NAME=WaZhop

# ============================================
# SMS CONFIGURATION (Optional)
# ============================================
SMS_PROVIDER=brevo
BREVO_SMS_SENDER=WaZhop

# Alternative: AfricasTalking
# SMS_PROVIDER=africastalking
AFRICASTALKING_USERNAME=sandbox
AFRICASTALKING_API_KEY=your-africastalking-key
AFRICASTALKING_SENDER_ID=WaZhop

# ============================================
# CLOUDINARY (Image Storage)
# ============================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# PAYMENT GATEWAYS (Optional - For Premium)
# ============================================
# Flutterwave
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK-xxxxx
FLUTTERWAVE_SECRET_KEY=FLWSECK-xxxxx

# Paystack
PAYSTACK_PUBLIC_KEY=pk_test_xxxxx
PAYSTACK_SECRET_KEY=sk_test_xxxxx

# ============================================
# ADMIN CREDENTIALS
# ============================================
# Used to create initial admin user
ADMIN_EMAIL=admin@wazhop.ng
ADMIN_PASSWORD=ChangeThisStrongPassword123!

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
# Options: error, warn, info, http, debug

# ============================================
# REDIS (Optional - for advanced rate limiting)
# ============================================
# REDIS_URL=redis://localhost:6379

# ============================================
# MONITORING (Optional)
# ============================================
# Sentry DSN for error tracking
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Enable detailed error messages
DEBUG=true

# Disable email sending in development
# DISABLE_EMAILS=true

# Disable SMS sending in development
# DISABLE_SMS=true
