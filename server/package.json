{
  "name": "washop-server",
  "version": "1.0.0",
  "description": "Backend API for WhatsApp Shop Builder",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:email": "node scripts/test-email.js",
    "test:sms": "node scripts/test-sms.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "security:audit": "npm audit",
    "security:audit:fix": "npm audit fix",
    "security:check": "npm audit --audit-level=moderate",
    "logs:view": "tail -f logs/combined.log",
    "logs:errors": "tail -f logs/error.log",
    "logs:clear": "rm -rf logs/*.log"
  },
  "keywords": [
    "ecommerce",
    "whatsapp",
    "shop",
    "api"
  ],
  "author": "Emife Austin",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.7",
    "bad-words": "^4.0.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.8.0",
    "compromise": "^14.14.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-async-handler": "^1.2.0",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.1",
    "flutterwave-node-v3": "^1.3.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "qrcode": "^1.5.4",
    "rate-limit-redis": "^4.2.3",
    "speakeasy": "^2.0.0",
    "streamifier": "^0.1.1",
    "winston": "^3.18.3",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
